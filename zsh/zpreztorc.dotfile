# Be case-sensitive
zstyle ':prezto:*:*' case-sensitive 'yes'

# Color output
zstyle ':prezto:*:*' color 'yes'
zstyle ':prezto:environment:grep' color 'no' # We set it in env

# Add zcalc
zstyle ':prezto:load' zfunction 'zcalc'

# Modules
zstyle ':prezto:load' pmodule \
  'environment' \
  'terminal' \
  'editor' \
  'history' \
  'directory' \
  'utility' \
  'completion' \
  'ssh-agent' \
  'git' \
  'ruby' \
  'prompt'

# Set prompt theme
fpath=(~/.zsh/themes/ $fpath)
zstyle ':prezto:module:prompt' theme 'custom'

# Options for terminal
zstyle ':prezto:module:terminal' auto-title 'yes'

# Options for ssh-agent
zstyle ':prezto:module:ssh-agent' forwarding 'yes'
zstyle ':prezto:module:ssh-agent' identities `cat ~/.ssh/autoloaded-identities`

# vim:filetype=zsh
