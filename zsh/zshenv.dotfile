# Editors
export EDITOR='vim'
export VISUAL='vim'
export PAGER='less'
export TERM="xterm-256color"

# grep
export GREP_OPTIONS='--color=auto --line-number --with-filename'

# less
export LESS='--hilite-search --hilite-unread --ignore-case --LONG-PROMPT --RAW-CONTROL-CHARS'

# Set path and manpath
typeset -gU path manpath

path=(
  /usr/local/{bin,sbin}
  /usr/{bin,sbin}
  /{bin,sbin}
  $path
)

manpath=(
  /usr/local/share/man
  /usr/share/man
  $manpath
)
