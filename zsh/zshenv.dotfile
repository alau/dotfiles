# Editors
export EDITOR='vim'
export VISUAL='vim'
export PAGER='less'
export TERM="xterm-256color"

# grep
export GREP_OPTIONS='--color=auto'

# less
export LESS='--hilite-search --hilite-unread --ignore-case --LONG-PROMPT --RAW-CONTROL-CHARS'

# sbt
export SBT_OPTS="-Xmx2G -XX:+UseConcMarkSweepGC -XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=2G -Xss2M"

# idea
export IDEA_VM_OPTIONS=$HOME/.idea/idea.vmoptions

# zsh theme
export KEYTIMEOUT=1

# Set path and manpath
typeset -gU path manpath

path=(
  /usr/local/{bin,sbin}
  /usr/{bin,sbin}
  /{bin,sbin}
  $HOME/Dropbox/bin
  $HOME/.rbenv/bin
  $path
)

manpath=(
  /usr/local/share/man
  /usr/share/man
  $manpath
)
